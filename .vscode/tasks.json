{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-o",
                "main",
                "-I", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/include", // OpenCV include path
                "-L", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/lib",    // OpenCV lib path
                "-lopencv_core", // Link against OpenCV core library
                "-lopencv_imgproc", // Link against OpenCV image processing library
                "-lopencv_highgui"  // Link against OpenCV highgui library (for image display, etc.)
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/include", // OpenCV include path
                "-L", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/lib",    // OpenCV lib path
                "-lopencv_core", // Link against OpenCV core library
                "-lopencv_imgproc", // Link against OpenCV image processing library
                "-lopencv_highgui"  // Link against OpenCV highgui library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/include", // OpenCV include path
                "-L", "/workspaces/MultiProcessing-Image-Processing/vcpkg/installed/x64-linux/lib",    // OpenCV lib path
                "-lopencv_core", // Link against OpenCV core library
                "-lopencv_imgproc", // Link against OpenCV image processing library
                "-lopencv_highgui"  // Link against OpenCV highgui library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}
